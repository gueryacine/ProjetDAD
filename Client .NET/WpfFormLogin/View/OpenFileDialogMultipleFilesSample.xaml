<Window x:Class="WpfFormLogin.View.OpenFileDialogMultipleFilesSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Select Files" Height="300" Width="300">
    <DockPanel Margin="10,0,10,10" Height="249" VerticalAlignment="Bottom">
        <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">
            <Button x:Name="btnOpenFile" Click="BtnOpenFiles_Click" Content="Open files"/>
            <Button x:Name="SEND" Click="Send_Click" Content="Send Files"/>
        </WrapPanel>
        <ListBox Name="lbFiles" />
    </DockPanel>
</Window>
